{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020"],
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "src/data/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
